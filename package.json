{
  "name": "ingipro-practice",
  "version": "1.0.0",
  "description": "ingipro.com practice 2017",
  "main": "index.js",
  "dependencies": {
    "express": "4.15.3"
  },
  "devDependencies": {
    "assets-webpack-plugin": "3.5.1",
    "babel-eslint": "7.2.3",
    "csscomb": "4.2.0",
    "eslint": "4.3.0",
    "eslint-plugin-react": "7.1.0",
    "handlebars": "4.0.10",
    "lodash": "4.17.4",
    "nodemon": "1.11.0",
    "pre-commit": "1.2.2",
    "stylelint": "8.0.0"
  },
  "scripts": {
    "start": "nodemon app/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run -s lint:eslint && npm run -s lint:stylelint && npm run -s lint:csscomb",
    "lint:csscomb": "./node_modules/.bin/csscomb ./app/components",
    "lint:stylelint": "files=`git diff --name-only --diff-filter=ACMR --cached | grep .scss`; if [ $files ]; then stylelint $files; fi",
    "lint:eslint": "files=`git diff --name-only --diff-filter=ACMR --cached | grep .js | grep -v json;`; if [ $files ]; then eslint $files; fi",
    "build": "webpack"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ixax/ingipro-practice.git"
  },
